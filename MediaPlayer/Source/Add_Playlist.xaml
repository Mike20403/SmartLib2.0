<Window x:Class="Media_Player.Add_Playlist"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Media_Player"
        mc:Ignorable="d"
        Title="Add playlist" Height="200" Width="350" MinWidth="350" MinHeight="200" MaxHeight="200" MaxWidth="350">
    <Canvas>
        <TextBlock Text="Playlist name : " Canvas.Top="34" HorizontalAlignment="Left" Canvas.Left="10" VerticalAlignment="Center"/>
        <TextBox x:Name="new_Playlist_name"  Canvas.Left="88" Canvas.Top="34" HorizontalAlignment="Left" VerticalAlignment="Center" Width="207"
                 ></TextBox>
        <Button Content="OK" Click="OK_Click" Canvas.Left="216" Canvas.Top="57" HorizontalAlignment="Left" VerticalAlignment="Center" Width="35"></Button>
        <Button Content="Cancel" Click="Cancel_Click" Canvas.Left="125" Canvas.Top="57" HorizontalAlignment="Left" VerticalAlignment="Center"></Button>
    </Canvas>
</Window>
