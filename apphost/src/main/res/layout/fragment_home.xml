<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <fragment
                android:id="@+id/fragment_banner"
                android:name="com.app.smartlibhost.Fragment.fragment_banner"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout="@layout/fragment_banner"
                />
        <View style="@style/Divider"
            android:id="@+id/line2"

            />

            <fragment
                android:id="@+id/fragment_recycle"
                android:tag="fragment_recycler"
                android:name="com.app.smartlibhost.Fragment.fragment_recycle"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line3"

            />
        <fragment
            android:id="@+id/fragment_sachthieunhi"
            android:name="com.app.smartlibhost.Fragment.fragment_sachthieunhi"
            android:tag="fragment_sachthieunhi"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >


        </fragment>
        <View style="@style/Divider"
            android:id="@+id/line4"


            />

        <fragment
            android:id="@+id/fragment_giaotrinh"
            android:name="com.app.smartlibhost.Fragment.fragment_giaotrinh"
            android:tag="fragment_giaotrinh"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line5"


            />

        <fragment
            android:id="@+id/fragment_policy"
            android:name="com.app.smartlibhost.Fragment.fragment_policy"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line6"


            />

        <fragment
            android:id="@+id/fragment_culture"
            android:name="com.app.smartlibhost.Fragment.fragment_culture"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line7"

            />

        <fragment
            android:id="@+id/fragment_story"
            android:name="com.app.smartlibhost.Fragment.fragment_story"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line8"

            />

        <fragment
            android:id="@+id/fragment_economic"
            android:name="com.app.smartlibhost.Fragment.fragment_economic"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line9" >

        </View>


        <fragment
            android:id="@+id/fragment_art"
            android:name="com.app.smartlibhost.Fragment.fragment_art"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line10"

            />

        <fragment
            android:id="@+id/fragment_religion"
            android:name="com.app.smartlibhost.Fragment.fragment_religion"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line11"

            />

        <fragment
            android:id="@+id/fragment_life"
            android:name="com.app.smartlibhost.Fragment.fragment_life"
            android:layout_width="match_parent"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />
        <View style="@style/Divider"
            android:id="@+id/line12"

            />

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="450dp"
            android:layout_marginTop="8dp"
            android:background="#FFFFFF"

                android:gravity="center">

                <View style="@style/Divider"
                    android:id="@+id/line"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"

                    />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="2"
                    android:alignmentMode="alignBounds"

                    android:columnCount="1"
                    android:columnOrderPreserved="false"
                    android:foregroundGravity="center"
                    android:orientation="vertical"
                    android:rowCount="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.794"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/aboutus"
                    app:layout_constraintVertical_bias="0.073">

                    <androidx.cardview.widget.CardView
                        android:layout_width="370dp"
                        android:layout_height="100dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"

                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/contact"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="8dp"
                                android:text="Contact: "
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@+id/khuongmai"
                                app:layout_constraintTop_toBottomOf="@+id/name" />

                            <TextView
                                android:id="@+id/name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="8dp"
                                android:text="Khương Mai"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@+id/khuongmai"
                                app:layout_constraintTop_toTopOf="parent" />

                            <ImageView
                                android:id="@+id/khuongmai"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/khuongmike" />

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginTop="8dp"
                                android:text="+ Phone : +84929145474"
                                app:layout_constraintStart_toEndOf="@+id/contact"
                                app:layout_constraintTop_toBottomOf="@+id/name" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="12dp"
                                android:text="+ Email: maikhuong2003@gmail.com"
                                app:layout_constraintStart_toEndOf="@+id/khuongmai"
                                app:layout_constraintTop_toBottomOf="@+id/textView11" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="370dp"
                        android:layout_height="100dp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_gravity="center"

                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="20dp"
                        android:layout_weight="1"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="8dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_gravity="center"
                            >

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="12dp"
                                android:text="+ Email: lehaodi@outlook.com"
                                app:layout_constraintStart_toEndOf="@+id/andyle"
                                app:layout_constraintTop_toBottomOf="@+id/textView15" />

                            <TextView
                                android:id="@+id/contact2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="8dp"
                                android:text="Contact: "
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@+id/andyle"
                                app:layout_constraintTop_toBottomOf="@+id/name2" />

                            <TextView
                                android:id="@+id/name2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="28dp"
                                android:layout_marginTop="8dp"
                                android:text="Andy Le"
                                android:textStyle="bold"
                                app:layout_constraintStart_toEndOf="@+id/andyle"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:text="+ Phone: +84919309916"
                                app:layout_constraintStart_toEndOf="@+id/contact2"
                                app:layout_constraintTop_toBottomOf="@+id/name2" />

                            <ImageView
                                android:id="@+id/andyle"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_marginStart="24dp"
                                android:layout_marginTop="8dp"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:srcCompat="@drawable/andyle" />


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                </GridLayout>


                <TextView
                    android:id="@+id/aboutus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="12dp"
                    android:text="      Về chúng tôi "
                    android:textColor="#000000"
                    android:textSize="17dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/line" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>



